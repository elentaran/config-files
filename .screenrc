
# no annoying audible bell, please
vbell off

# don't display the copyright page
startup_message off


defscrollback 2048

# compute the disk usage
backtick 1 60 60 bash -c "df -h . | sed -n '2p' | awk '{print \$5}'"

hardstatus alwayslastline "%{= bW} %-w%{= Wb}%n %t%{-}%+w %=HD:%1` | %c"


# navigate when split screen 
bind j focus down 
bind k focus up

# navigate between screen
bind h prev
bind l next

